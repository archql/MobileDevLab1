<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="note"
            type="com.archql.notebad.Note" />
        <variable
            name="noteClickListener"
            type="com.archql.notebad.NoteViewAdapter.OnNoteClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:orientation="vertical"
        android:onClick="@{() -> noteClickListener.onNoteClick(note)}">

        <TextView
            android:id="@+id/txtNoteHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:text="@{note.header}"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5sp"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/txtNoteBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:background="@color/white"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal|vertical"
                android:fadingEdgeLength="50sp"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="3"
                android:padding="5sp"
                android:requiresFadingEdge="horizontal|vertical"
                android:text="@{note.text}"
                android:textColor="?android:attr/textColorPrimary" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtNoteDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:paddingStart="20sp"
            android:text="@{note.getDateString()}" />

    </LinearLayout>
</layout>